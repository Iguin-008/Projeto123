import telebot
import dotenv
from os import getenv

dotenv.load_dotenv()

TOKEN_TELEGRAM = getenv("TOKEN_TELEGRAM")

bot = telebot.TeleBot(TOKEN_TELEGRAM)

comandos = (
    "/opcao1 - Essa é a primeira opção.",
    "/opcao2 - Essa é a segunda opção."
)
opcao1_comandos = (
    "/subopcao1 - Subopção 1 da opção 1.",
    "/subopcao2 - Subopção 2 da opção 1."
)

@bot.message_handler(commands=["start"])
def mensagem_boas_vindas(message):
    bot.send_message(message.chat.id, "Olá, tudo bem? Escolha uma das seguintes opções:") 
    for comando in comandos:
        bot.send_message(message.chat.id, comando)
    
@bot.message_handler(commands=["opcao1"])
def opcao1(message):
    bot.send_message(message.chat.id, "A primeira opção foi escolhida. Agora escolha uma das subopções:")
    for subcomando in opcao1_comandos:
        bot.send_message(message.chat.id, subcomando)

@bot.message_handler(commands=["subopcao1"])
def subopcao1(message):
    bot.send_message(message.chat.id, "Você escolheu a Subopção 1 da opção 1.")

@bot.message_handler(commands=["subopcao2"])
def subopcao2(message):
    bot.send_message(message.chat.id, "Você escolheu a Subopção 2 da opção 1.")
    
@bot.message_handler(commands=["opcao2"])
def opcao2(message):
    bot.send_message(message.chat.id, "A segunda opção foi escolhida.")

if __name__ == "__main__":
    bot.polling()
